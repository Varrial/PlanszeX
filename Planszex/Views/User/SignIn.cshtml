@model Planszex.Controllers.UserController
@{
    ViewData["Title"] = "SignIn";
}
<link rel="stylesheet" href="~/css/Form.css" />
<div class="containter-custom">
    <h1 class="header">Logowanie</h1>

    @using (Html.BeginForm("SignIn", "User", FormMethod.Post))
    {
        <div class="container">
            <!--form class="form-horizontal" method="post"-->
                <div class="form-group">
                    <div class="label-custom col-sm-12">
                        @ViewBag.SignIn
                    </div>
                </div>
                <div class="form-group">
                    <div class="label-custom col-sm-12">
                        <label asp-for="Login" class="control-label"></label>
                    </div>
                    <div class="col-sm-3">
                        <input asp-for="Login" class="form-control form-input-text-custome">
                    </div>
                </div>
                <div class="form-group">
                    <div class="label-custom col-sm-12"><label asp-for="Password" class="control-label col-sm2">Password</label></div>
                    <div class="col-sm-3">
                        <input type="password" asp-for="Password" class="form-control form-input-text-custome">
                    </div>
                </div>
                <div class="form-group col-sm-12 form-submit-button-custom">
                    <div class=" col-sm-7">
                        <!--<input type="submit" class="btn" id="btnProceed" value="Zatwierdź" />-->
                        <button class="btn shop-btn effect01">Zatwierdź</button>
                    </div>
                    <div class=" col-sm-5"></div>
                </div>
            <!--form-->
        </div>
    }
</div>